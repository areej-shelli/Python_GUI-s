from tkinter import *
from langdetect import detect
from langcodes import *
root=Tk()
def check():
    if txt.compare("end-1c","==","1.0"):
        l.config(text="Enter any thing")
    else:
        code=detect(txt.get(1.0,END))
        res= Language.make(language=code).display_name()
        l.config(text=f"Languge is {res}")   
        
txt=Text(root,height=10 ,width=40)
txt.pack(pady=12)
b=Button(root,text="check" ,command=check)
b.pack(pady=11)
l=Label(root,text="")
l.pack(pady=22)

root.mainloop()